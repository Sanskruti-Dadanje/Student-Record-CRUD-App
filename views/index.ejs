<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Student Management System</title>

  <!-- Bootstrap CSS CDN -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css" />

</head>

<body>
  <div class="container bg-white p-5 rounded shadow">
    <h1 class="display-5 fw-bold text-center mb-5">Student Management System</h1>

    <div class="mb-5 p-4 bg-primary bg-opacity-10 rounded shadow-sm">
      <h2 class="h4 fw-semibold text-primary mb-3">Add New Student</h2>
      <form action="/add" method="POST" class="row g-3">
        <div class="col-12 col-sm-4">
          <input type="text" name="name" placeholder="Name" required class="form-control" />
        </div>
        <div class="col-12 col-sm-4">
          <input type="text" name="roll_number" placeholder="Roll Number" required class="form-control" />
        </div>
        <div class="col-12 col-sm-4">
          <input type="text" name="class" placeholder="Class" required class="form-control" />
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">
            Add Student
          </button>
        </div>
      </form>
    </div>

    <div class="p-4 bg-light rounded shadow-sm">
      <h2 class="h4 fw-semibold mb-3">Student List</h2>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead class="table-secondary">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Roll Number</th>
              <th scope="col">Class</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (students && students.length > 0) { %>
              <% students.forEach(student => { %>
                <tr>
                  <td><%= student.id %></td>
                  <td><%= student.name %></td>
                  <td><%= student.roll_number %></td>
                  <td><%= student.class %></td>
                  <td>
                    <a href="/delete/<%= student.id %>" class="text-danger text-decoration-none">
                      Delete
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center text-muted">No students found.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  
  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
